#round1p1
import random
#AUTHENTICATION
print("Welcome to the PYTHON dice game login user 1")
user = str(input("what is your username?"))
if user == "tay" or "salem" or "brendan" or "ronnie":
    print("please enter password")
else:
    print("Unauthorised")
password = "abc123"
if user == "tay" or "salem" or "brendan" or "ronnie":
    attempt = str(input("Enter your password")) 
    if attempt == password:
        print("authorised")
    else:
        exit()
print("Welcome to the dice game")
rollplayer1=0
user1Score=0

die1=random.randint(1,6)
die2=random.randint(1,6)
totaldie=die1+die2
print ("you rolled a ",die1, "and a ",die2)
if die1 == die2:
    print ("you rolled a double! Roll another die!")
    die3=random.randint(1,6)
    print("you rolled a ", die3)
    totaldie=totaldie+die3
    print("you have now rolled", totaldie)
else:
    print("you have rolled", totaldie)
user1Score=user1Score + totaldie
odds =totaldie %2

if odds == 1:
    user1Score = user1Score-5
else:
    user1Score = user1Score+10
print("your score so far player 1 is ",user1Score)
########################################################
########################################################
########################################################

